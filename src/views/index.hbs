<div class="card">
    <div class="card-header bg-dark">
        <h3 class="card-title text-white">
            <i class="fa fa-image"></i> Cargar imágen del objeto
        </h3>
    </div>
    <div class="card-body">
        <form action="/images" method="POST">
             <div class="form-group">
                  <div class="input-group">
                      <div class="custom-file">
                          <input type="file" name="image" class = "custom-file-input" id="inputGroup" aria-describedby="inputGroupFileAddon" required>
                          <label class="custom-file-label" for="inputGroupFile">Escoge la imagen de tu objeto</label> 
                      </div>
                  </div>
             </div>
             <div class="form-group">
                 <input type="text" name ="title" class="form-control" placeholder = "Título para el objeto" required>
             </div>
             <div class="form-group">
                 <textarea name="description"  rows="3" class = "form-control" placeholder = "Descripción del objeto" required></textarea>
             </div>
             <div class="form-group">
                 <button class="btn btn-success">
                   <i class = "fa fa-upload"></i> Subir Imagen 
                 </button>
             </div>
        </form>
  </div>
</div>